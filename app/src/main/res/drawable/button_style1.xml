<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> //指定形狀類型，默認為rectangle

    <gradient
        android:startColor="#35A58D"
        android:centerColor="#5CC8AC"
        android:endColor="#B0E292"
        android:angle="360" />

    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp" /> //設定內容區域離邊界的間距

    <corners android:radius="40dp" /> //設定圓角，只適用於 rectangle

</shape>